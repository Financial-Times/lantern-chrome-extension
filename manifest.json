{
  "manifest_version": 2,
  "name": "Lantern",
  "version": "1.0",
  "description": "Conveniently open your page analytics with just one click.",
  "icons": {
    "128": "images/logo_128.png",
    "48": "images/logo_48.png",
    "16": "images/logo_16.png"
  },
  "page_action": {
    "default_icon": "images/logo_128.png"
  },
  "permissions": [
    "declarativeContent"
  ],
  "background": {
    "scripts": [ "scripts/background.js" ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://www.ft.com/*"
      ],
      "js": [
        "scripts/content.js"
      ]
    }
  ]
}